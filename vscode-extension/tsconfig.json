{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"moduleResolution": "node",
		/*"alwaysStrict": true,*/
        "noImplicitAny": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noFallthroughCasesInSwitch": true,
		"strict": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
